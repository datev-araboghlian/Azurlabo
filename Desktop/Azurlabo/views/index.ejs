<%- include('layout') %>

<!-- Hero Section -->
<section class="hero text-center">
    <div class="container">
        <h1>Welcome to Azurlabo</h1>
        <p class="lead">Your Premier Source for Professional Dental Equipment</p>
        <a href="/shop" class="btn btn-primary btn-lg">Shop Now</a>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-products py-5">
    <div class="container">
        <h2 class="text-center mb-4">Featured Products</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <img src="/images/dental-chair.jpg" class="card-img-top product-image" alt="Dental Chair">
                    <div class="card-body">
                        <h5 class="card-title">Premium Dental Chair</h5>
                        <p class="card-text">State-of-the-art dental chair with advanced positioning controls.</p>
                        <a href="/shop" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <img src="/images/sterilizer.jpg" class="card-img-top product-image" alt="Sterilizer">
                    <div class="card-body">
                        <h5 class="card-title">Autoclave Sterilizer</h5>
                        <p class="card-text">Professional-grade sterilization equipment for your practice.</p>
                        <a href="/shop" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <img src="/images/xray.jpg" class="card-img-top product-image" alt="X-Ray Machine">
                    <div class="card-body">
                        <h5 class="card-title">Digital X-Ray System</h5>
                        <p class="card-text">High-resolution imaging system for precise diagnostics.</p>
                        <a href="/shop" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="why-choose-us bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Why Choose Azurlabo?</h2>
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-certificate fa-3x mb-3 text-primary"></i>
                <h4>Quality Assured</h4>
                <p>All our products meet the highest industry standards</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-truck fa-3x mb-3 text-primary"></i>
                <h4>Fast Shipping</h4>
                <p>Quick and reliable delivery to your practice</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-headset fa-3x mb-3 text-primary"></i>
                <h4>Expert Support</h4>
                <p>24/7 technical support and customer service</p>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h3>Stay Updated</h3>
                <p>Subscribe to our newsletter for the latest products and special offers</p>
                <form class="row g-3 justify-content-center">
                    <div class="col-auto">
                        <input type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
